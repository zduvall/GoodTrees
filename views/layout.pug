doctype html
html
  head
    block head
      title="goodtrees"
      link(rel="icon" type="image/ico" href="favicon.ico")
      <script src="https://kit.fontawesome.com/e6d5eeb90d.js" crossorigin="anonymous"></script>
      link(href="https://fonts.googleapis.com/css2?family=Raleway:wght@100;500&display=swap" rel="stylesheet")
      link(rel="stylesheet" href="/stylesheets/reset.css")
      link(rel="stylesheet" href="/stylesheets/index.css")
      link(rel="stylesheet" href="/stylesheets/forms.css")
      link(rel="stylesheet" href="/stylesheets/backgrounds.css")
      meta(property="og:website" content="website")
      meta(property="og:url" content="https://goodtrees.herokuapp.com/")
      meta(name="image" property="og:image" content="https://good-trees.s3-us-west-1.amazonaws.com/GoodTrees-preview.png")
      meta(name="description" property="og:description" content="For those who love the climb and the view from the top. Inspired by the social cataloging platform of goodreads and the fun-loving vibes of tree climbers everywhere.")
      meta(name="author" content="Andre Grant, Gabriel Gutierrez, Tommy Chen, Zachary Duvall")
  body

    nav(class="navbar")
      div(class="logo")
        a(href="/" class="good goodTrees navBar-a-tag") good
        a(href="/" class="tree goodTrees navBar-a-tag") trees
      if locals.authenticated
        span(class="nav-span") Welcome to Good Trees, #{locals.curUser.username}!
        a(class="nav-link navBar-a-tag" href=`/users/${locals.curUser.id}` class="navBar") My Forest
        a(class="nav-link navBar-a-tag" href="/trees" class="navBar") Find Trees
        a(class="nav-link navBar-a-tag" href="/highest-climbers" class="navBar") Highest Climbers
        form(class="nav-logout-form nav-link" action="/users/logout" method="POST")
          button(type="submit" class="nav-logout-btn") Logout
      else
        span(class="nav-span")
        a(class="nav-link" href="/") Home
        a(class="nav-link" href="/users/sign-up") Sign Up
        a(class="nav-link" href="/users/login") Log In
    block content

    footer(class="footer")
      div(class="footer-container footer-about")
        h5 About
        div:p(class="footer-about-p") For those who love the climb and the view from the top. Our first live project at App Academy, inspired by goodreads.com. Checkout our <a href="https://github.com/zduvall/GoodTrees/wiki" id="footer-github-link">GitHub Repo</a>.
      div(class="footer-container footer-developers")
        h5 Developers
        div(class="footer-dev-name-container")
          a(href="https://github.com/IamDgrant") Andre Grant
          a(href="https://github.com/OptimumMars") Gabriel Gutierrez
          a(href="https://github.com/btcblade") Tommy Chen
          a(href="https://github.com/zduvall") Zachary Duvall
      div(class="footer-container footer-technologies-used")
        h5 Technologies Used
        div(class="footer-technologies-used-container")
          div(class="footer-img-container")
            img(src="/technologies/icons8-nodejs-96.png")
          div(class="footer-img-container")
            img(src="/technologies/heroku_logo_icon_169035.png")
          div(class="footer-img-container")
            img(src="/technologies/postgresql.png")
          div(class="footer-img-container")
            img(src="/technologies/expressjs.png")
