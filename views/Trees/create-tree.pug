extends ../layout.pug
include ../utils.pug

block content
    .create-tree__background.page__background
        h1.header Create Tree
        .form-container
            form(action="/trees/new" method="post")
                +csrfToken()
                +field("Name", "name", tree.name)
                +field("Closest City/State", "cityState", tree.cityState)
                +field("Detailed Location", "detLocation", tree.detLocation, "textarea")
                +field("Description", "description", tree.description, "textarea")
                div.submit-btn
                    button(type="submit" class="form-btn") Create a new Tree
            div
                +validationErrorSummary(errors)