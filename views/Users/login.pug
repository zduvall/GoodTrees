extends ../splash.pug
include ../utils.pug

block content
  div(class="form-container")
    div(class="form__auth")
      h1 Login
      div  
        form(action="/users/login", method="post") 
          +csrfToken()
          +field("Email", "email", email, "mail")
          +field("Password", "password", null, "password")
          div.login-form-button-container
            button(type="submit" class="form-btn") Submit
        div.login-form-button-container
          form(action="/users/demo" method="post")
            button(type="submit" class="form-btn") Demo Login
      div
        +validationErrorSummary(errors)
