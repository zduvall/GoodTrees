extends layout.pug
include ../utils.pug

block content
    +validationErrorSummary(errors)
    form(action="/users/register")
        input(type="hidden" name="_csrf" value=csrfToken)
        +field('Username', 'username', user.username)
        +field('Email', 'email', user.email)
        +field('Password', 'password1', user.password1, 'password')
        +field('Confirm Password', 'password2', user.password2)
        button(type='submit') Submit